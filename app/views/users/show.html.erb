<% provide(:title, @user.name) %>
<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <h1>
        <%= gravatar_for @user %>
        <%= @user.name %>
      </h1>
       <%= t('orite') %>
    </section>
    <ul>
        <li>Posts made</li>
        <li>Topics registered for and praise</li>
        <li>Bubble's involvemeed in (supporter/ editor)</li>
      </ul>
  </aside>
  <div class="col-md-8">
   <% if @user.microposts.any?%>
   <h3>Microposts (<%= @user.microposts.count %>)</h3>
   <ol class="microposts">
     <%= render @microposts %>
   </ol>
   <% end %>
   <%= will_paginate @microposts %>
  </div>
</div>
